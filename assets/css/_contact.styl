#contact
  position relative
  width 100%
  height 16em
  background-color #28282e
  color #76767b
  text-align center
  padding-top 6.5em
  font-size 1.25em

  .logo
    column(1/2)

    img
      height 4.25em

  #info
    column(1/2)
    text-align center

    .location
      text-transform uppercase
      font-weight 700
      margin-bottom .5em

      i
        font-size 24px
        color red
        padding-right .75em

      span
        color white

    a, p
      color inherit
      text-decoration none
      font-size .85em

    p
      margin-top .25em

    a
      color red

    a:hover
      border-bottom 2px solid #3d3d45

  +below(900px)
    height 16em

  +below(550px)
    height 32em

    .logo, #info
      stack()

    #info
      padding-top 8em
