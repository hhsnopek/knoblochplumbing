#services
  position relative
  height 30em
  width 100%

  +below(900px)
    height 65.5em
  +below(720px)
    height 66.5em
  +below(570px)
    height 67em
  +below(550px)
    height 113em
  +below(522px)
    height 115em
  +below(475px)
    height 120em
    background-color #28282e

  #services-gutter
    height 100%
    span(1/3)
    padding-top 2em
    text-align center
    background-color #eeeeee
    
    h3
      color black

    #header
      text-align left
      center(80%)

      h1
        color black
        margin 0 15px 0 0

      h1:nth-of-type(2)
        margin-top -.75em

    #info
      font-weight 400
      text-align left
      center(80%)

      #line
        width 20%
        height .25em
        background-color grey
        margin-bottom 1em

        +below(550px)
          width 100%

    +below(900px)
      cf()
      width 100%
      height auto
      padding-bottom 5em

  #servicelist
    span(2/3)

    li
      span(1/3)
      transition none !important
      height 15em
      text-align center
      list-style none

      i
        padding .5em
        padding-top 1.5em
        font-size 3em
        color red

      .name
        font-family 'Rokkitt', sans-serif
        font-weight bold
        text-transform uppercase
        font-size 1.15em

      .info
        center(80%)
        padding-top 1em
        display none
        font-size .85em

      +below(900px)
        span(1/2)
        text-align center
        background-color #28282e
        color white
        border 1px solid #fff

        i
          padding-top .75em

        .info
          center(80%)
          padding-top 1em
          display block
      
      +below(550px)
        cf()
        width 100%
        border-top 1px solid #fff
        border-bottom 1px solid #fff
        background-color #28282e
        color white

        i
          padding-top .75em

        .info
          center(80%)
          padding-top 1em
        

    +below(900px)
      position relative
      height auto
      cf()
      width 100%

      li:nth-of-type(even)
        border-right 0

      li:nth-of-type(odd)
        border-left 0

    +below(550px)
      li
        border-left 0
        border-right 0

      li:last-of-type
        border-bottom 0

    li:hover
      background-color #28282e
      color white

      i
        padding-top .5em

      .info
        center(80%)
        padding-top 1em
        display block
