@import '_settings'

*
  margin 0
  padding 0
  box-sizing border-box
  transition all .25s ease-out 0

body 
  font-family font-stack
  font-weight 400
  font-size 16px
  center(100%)


nav
  font-family 'Rokkitt', sans-serif
  #cheat
    display none
  ul
    inline-list()
    width 100%
    height 5.25em
    color dark-gray
    background-color white
    text-align center
    padding-left 15.75%

    +below(900px)
      padding-left 0
    +below(750px)
      position relative
      overflow hidden
      overflow-x auto
      white-space nowrap
      padding-bottom .5em
      li
        float none
        display inline-block
        line-height 3.75em
        a
          margin-top -1em
      #cheat
        display block

  li
    height 5.25em
    padding .5em
    line-height 4.75em
    a
      reset-link()

    +below(750px)
      padding 0
      padding-top .5em
      padding-bottom .5em
      margin-top 0

  li:hover, li.active
    cursor pointer
    a
      color red

  li:nth-of-type(1)
    margin-top -.5em
    padding-right 2em
    text-align left
    img
      height 5.25em
      padding .5em
      
    +below(750px)
      padding-right 0


.main
  width 100%
  background-color white

  #landing
    position relative
    height 35em
    width 100%
    background url('/img/background1.jpg') center center no-repeat
    background-size cover
    text-align center
    .header
      background-color white
      width 450px
      height 175px
      margin auto
      padding .75em 1em .75em 1em
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      +below(500px)
        width 100%
        height 30%
    +below(650px)
      background-position right center

#services
  height 30em
  width 100%

  +below(900px)
    height 67.5em
  +below(575px)
    height 115em
  +below(475px)
    height 120em
    background-color #28282e
  #services-gutter
    height 100%
    span(1/3)
    padding-top 2em
    text-align center
    background-color #eeeeee
    h3
      color black
    #header
      text-align left
      padding-left 25%
      h1
        color black
        margin-bottom 0
      h1:nth-of-type(2)
        margin-top -.75em
    #info
      font-weight 400
      text-align left
      center(80%)
      #line
        width 20%
        height .25em
        background-color grey
        margin-bottom 1em
      +below(550px)
        text-align center
        #line
          width 100%

    +below(900px)
      cf()
      width 100%
      height auto
      padding-bottom 5em

  #servicelist
    span(2/3)
    li
      span(1/3)
      transition none !important
      height 15em
      text-align center
      i
        padding .5em
        padding-top 1.5em
        font-size 3em
        color red
      .name
        font-family 'Rokkitt', sans-serif
        font-weight bold
        text-transform uppercase
        font-size 1.15em
      .info
        center(80%)
        padding-top 1em
        display none
        font-size .85em
      +below(900px)
        span(1/2)
        text-align center
        background-color #28282e
        color white
        border 1px solid #fff
        i
          padding-top .75em
        .info
          center(80%)
          padding-top 1em
          display block
      +below(550px)
        cf()
        width 100%
        border-top 1px solid #fff
        border-bottom 1px solid #fff
        background-color #28282e
        color white
        i
          padding-top .75em
        .info
          center(80%)
          padding-top 1em
        

    +below(900px)
      position relative
      height auto
      cf()
      width 100%
      li:nth-of-type(even)
        border-right 0
      li:nth-of-type(odd)
        border-left 0
    +below(550px)
      li
        border-left 0
        border-right 0
      li:last-of-type
        border-bottom 0

    li:hover
      background-color #28282e
      color white
      i
        padding-top .5em
      .info
        center(80%)
        padding-top 1em
        display block

#satisfaction
  position relative
  height 20em
  width 100%
  background url('/img/drain-black.JPG') center center no-repeat
  background-size cover
  text-align center
  .header
    position relative
    font-size 4em
    font-weight 700
    height 100%                    
    width 100%
    margin auto
    padding-top 2em
    top 0
    left 0
    bottom 0
    right 0
    +below(900px)
      font-size 2.5em
      padding-top 3.5em
    +below(550px)
      padding-top 3em

#contact
  position relative
  width 100%
  height 16em
  background-color #28282e
  color #76767b
  text-align center
  padding-top 6.5em
  .logo
    column(1/2)
    img
      height 4.25em
  #info
    column(1/2)
    text-align center
    .location
      text-transform uppercase
      font-weight 700
      margin-bottom .5em
      i
        font-size 24px
        color red
        padding-right .75em
      span
        color white
    a, p
      color inherit
      text-decoration none
      font-size .85em
      margin-left 1.5em
    p
      margin-top .25em
    a:hover
      border-bottom 2px solid #3d3d45

  +below(900px)
    height 16em
  +below(550px)
    height 32em
    .logo, #info
      stack()
    #info
      padding-top 8em

#copyright
  position relative
  display block
  padding .5em
  width 100%
  border-top 1px solid #76767b
  text-align center
  background-color #28282e
  color #76767b
  font-size .85em
