@import '_settings'

*
  margin 0
  padding 0
  box-sizing border-box
  transition all .25s ease-out 0

body 
  font-family font-stack
  font-weight 400
  font-size 16px
  center(100%)


nav
  font-family 'Rokkitt', sans-serif
  ul
    inline-list()
    width 100%
    height 5.25em
    color dark-gray
    background-color white
    text-align center
    border-bottom 1px solid gray
    padding-left 15.75%

    +below(900px)
      padding-left 0
    +below(750px)
      overflow hidden
      overflow-x scroll
      li
        line-height 3.75em
      #cheat
        display block

  li
    height 5.25em
    padding .5em
    line-height 4.75em
    a
      reset-link()
  li:hover, li.active
    cursor pointer
    a
      color red

  li:nth-of-type(1)
    margin-top -.5em
    padding-right 2em
    text-align left
    img
      height 5.25em
      padding .5em


.main
  width 100%
  background-color white

#services
  height 30em
  width 100%
  #services-gutter
    height 100%
    span(1/3)
    padding-top 2em
    text-align center
    background-color #f0f0f0
    #header
      text-align left
      padding-left 25%
      h1
        color black
        margin-bottom 0
      h1:nth-of-type(2)
        margin-top -.75em

  #servicelist
    span(2/3)
    li
      span(1/3)
      transition none !important
      height 15em
      border 1px solid #f0f0f0
      text-align center
      i
        padding .5em
        padding-top 1.5em
        font-size 3em
        color red
      .name
        font-family 'Rokkitt', sans-serif
        font-weight bold
        text-transform uppercase
        font-size 1.15em
      .info
        center(80%)
        padding-top 1em
        display none
        font-size .85em
      +below(900px)
        column(1/2)

    li:hover
      background-color #28282e
      color white
      i
        padding-top .75em
      .info
        center(80%)
        padding-top 1em
        display block

#contact
  width 100%
  height 16em
  background-color #28282e
  color #76767b
  text-align center
  padding-top 6.5em
  .logo
    column(1/2)
    img
      height 4.25em
  #info
    column(1/2)
    .location
      text-transform uppercase
      font-weight 700
      margin-bottom .5em
      i
        font-size 24px
        color red
        padding-right .75em
      span
        color white
    a
      color inherit
      text-decoration none
      font-size .85em
      padding-left 1.5em

#go-to-top
  display block
  padding 1em
  width 100%
  border-top 1px solid #76767b
  text-align center
  background-color #28282e
  color #76767b
  text-decoration none
  i
    color white

  &:hover
    background-color lighten(#28282e, 5)
    color red
